@model EventRegistration.Models.Registration

@{
    ViewData["Title"] = "報名確認";
}

<div class="row">
    <div class="col-lg-8 mx-auto">
        <div class="card shadow border-success">
            <div class="card-header bg-success text-white text-center">
                <h2 class="mb-0">報名成功！</h2>
            </div>
            <div class="card-body">
                <div class="alert alert-success text-center" role="alert">
                    <h4>恭喜您已完成報名</h4>
                    <p class="mb-0">我們已收到您的報名資訊</p>
                </div>

                <h5 class="border-bottom pb-2 mb-3">報名資訊</h5>
                <dl class="row">
                    <dt class="col-sm-4">報名編號</dt>
                    <dd class="col-sm-8"><span class="badge bg-primary">#@Model.Id</span></dd>

                    <dt class="col-sm-4">活動名稱</dt>
                    <dd class="col-sm-8">@Model.Event?.EventName</dd>

                    <dt class="col-sm-4">學生姓名</dt>
                    <dd class="col-sm-8">@Model.StudentName</dd>

                    <dt class="col-sm-4">學號</dt>
                    <dd class="col-sm-8">@Model.StudentId</dd>

                    <dt class="col-sm-4">Email</dt>
                    <dd class="col-sm-8">@Model.Email</dd>

                    <dt class="col-sm-4">參加人數</dt>
                    <dd class="col-sm-8">@Model.ParticipantCount 人</dd>

                    <dt class="col-sm-4">素食需求</dt>
                    <dd class="col-sm-8">@(Model.IsVegetarian ? "是" : "否")</dd>

                    @if (!string.IsNullOrEmpty(Model.ContactPhone))
                    {
                        <dt class="col-sm-4">聯絡電話</dt>
                        <dd class="col-sm-8">@Model.ContactPhone</dd>
                    }

                    @if (!string.IsNullOrEmpty(Model.Remarks))
                    {
                        <dt class="col-sm-4">備註</dt>
                        <dd class="col-sm-8">@Model.Remarks</dd>
                    }

                    <dt class="col-sm-4">報名時間</dt>
                    <dd class="col-sm-8">@Model.RegistrationDate.ToString("yyyy/MM/dd HH:mm")</dd>
                </dl>

                <hr />

                <div class="alert alert-info" role="alert">
                    <strong>提醒：</strong>我們已將確認信寄至您的 Email，請留意收信。
                </div>

                <div class="d-grid gap-2">
                    <a asp-controller="Events" asp-action="Index" class="btn btn-primary">
                        返回活動列表
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>