@model IEnumerable<EventRegistration.Models.Registration>

@{
    ViewData["Title"] = "管理後台";
}

<div class="row mb-4">
    <div class="col-12">
        <h2 class="display-5">報名管理後台</h2>
        <p class="text-muted">查看所有報名資料並進行管理</p>
    </div>
</div>

@if (Model.Any())
{
    <div class="card shadow">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover table-striped align-middle">
                    <thead class="table-dark">
                        <tr>
                            <th>編號</th>
                            <th>活動名稱</th>
                            <th>學生姓名</th>
                            <th>學號</th>
                            <th>Email</th>
                            <th class="text-center">人數</th>
                            <th class="text-center">素食</th>
                            <th>報名時間</th>
                            <th class="text-center">操作</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Id</td>
                                <td>
                                    <strong>@item.Event?.EventName</strong><br />
                                    <small class="text-muted">@item.Event?.EventType</small>
                                </td>
                                <td>@item.StudentName</td>
                                <td><code>@item.StudentId</code></td>
                                <td>@item.Email</td>
                                <td class="text-center">
                                    <span class="badge bg-primary">@item.ParticipantCount</span>
                                </td>
                                <td class="text-center">
                                    @if (item.IsVegetarian)
                                    {
                                        <span class="badge bg-success">✓</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">✗</span>
                                    }
                                </td>
                                <td>
                                    <small>@item.RegistrationDate.ToString("MM/dd HH:mm")</small>
                                </td>
                                <td class="text-center">
                                    <form asp-action="Delete" asp-route-id="@item.Id" method="post"
                                          onsubmit="return confirm('確定要取消 @item.StudentName 的報名嗎？');">
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="btn btn-sm btn-danger">
                                            取消報名
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <div class="mt-3">
                <p class="text-muted mb-0">
                    <strong>總計：</strong>@Model.Count() 筆報名資料
                </p>
            </div>
        </div>
    </div>
}
else
{
    <div class="alert alert-info text-center" role="alert">
        <h4>目前尚無任何報名資料</h4>
        <p class="mb-0">當有學生報名後，資料會顯示在這裡</p>
    </div>
}